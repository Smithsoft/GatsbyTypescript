{
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off"
    },
    "overrides": [
        {
            "files": [
                "./src/**/*.ts",
                "./src/**/*.tsx"
            ],
            "extends": [
                "plugin:@typescript-eslint/recommended",
                "plugin:prettier/recommended"
            ],
            "plugins": [
                "@typescript-eslint"
            ],
            "parser": "@typescript-eslint/parser"
        }
    ]
}
